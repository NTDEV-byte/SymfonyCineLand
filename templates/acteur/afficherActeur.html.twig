{% extends 'base.html.twig' %}

{% block bootstrap %} {% endblock %}
{% block simple %} {% endblock %}
{% block w3 %} <link rel ="stylesheet" href="../../css/w3.css"> {% endblock %}



{% block body %}
<h1 class="w3-teal"> Informations Acteur </h1>


<ul class="w3-panel w3-leftbar w3-sand w3-xxlarge w3-serif w3-ul w3-border">

<li>ID: {{acteur.id}}</li>

<li>Nom Prenom: {{acteur.nomPrenom}}</li>

<li>Date Naissance: {{acteur.dateNaissance|date("Y-m-d")}}</li>

<li>Nationalité: {{acteur.nationalite}}</li>



{% if afficheFilms %}

<h1 class="w3-teal">Les Films dans lequel {{acteur.nomPrenom}} a joué</h1>

<ul class="w3-ul w3-card-4">


{% for film in films %}



<li>
  {{ film.titre }}
</li>


{% endfor %}


</ul>



{% endif  %}



</ul>



<div class = "w3-center">
<button class="w3-btn w3-blue " style="width:30%;"><a href="{{ path('modifier_acteur',{'id':acteur.id} )}}" style="text-decoration:none;">Modifier</a></button>  <button class="w3-btn w3-red" style="width:30%;"><a href="{{path('supprimer_acteur',{'id':acteur.id})}}" style="text-decoration:none;">Supprimer</a></button>
</div>

{% endblock %}
